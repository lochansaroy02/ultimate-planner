generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String
}

model Plan {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  years       Year[]
}

model Year {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  planId      Int?
  Plan        Plan?   @relation(fields: [planId], references: [id])
  months      Month[]
  goals       Goal[] // related goals for this year
}

model Month {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  yearId      Int?
  Year        Year?  @relation(fields: [yearId], references: [id])
  weeks       Week[]
  goals       Goal[] // related goals for this month
}

model Week {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  monthId     Int?
  Month       Month? @relation(fields: [monthId], references: [id])
  days        Day[]
  goals       Goal[] // related goals for this week
}

model Day {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  weekId      Int?
  Week        Week?  @relation(fields: [weekId], references: [id])
  tasks       Task[]
  goals       Goal[] // related goals for this day
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  isCompleted Boolean
  dayId       Int?
  Day         Day?    @relation(fields: [dayId], references: [id])
}

model Goal {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  isCompleted Boolean

  // Optional foreign keys for each level
  yearId Int?
  Year   Year? @relation(fields: [yearId], references: [id])

  monthId Int?
  Month   Month? @relation(fields: [monthId], references: [id])

  weekId Int?
  Week   Week? @relation(fields: [weekId], references: [id])

  dayId Int?
  Day   Day? @relation(fields: [dayId], references: [id])
}
